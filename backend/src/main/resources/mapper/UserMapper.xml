<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinspace.mapper.UserMapper">
    
    <!-- 根据用户名查询用户 -->
    <select id="getUserByUsername" resultType="com.jinspace.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
    
    <!-- 根据邮箱查询用户 -->
    <select id="getUserByEmail" resultType="com.jinspace.entity.User">
        SELECT * FROM user WHERE email = #{email}
    </select>
    
    <!-- 根据用户名或邮箱查询用户 -->
    <select id="getUserByUsernameOrEmail" resultType="com.jinspace.entity.User">
        SELECT * FROM user WHERE username = #{username} OR email = #{email}
    </select>
    
</mapper>